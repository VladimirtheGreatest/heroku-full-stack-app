<h2 class="page-header">Edit Author</h2>
<form action="/authors/<%= author.id %>?_method=PUT" method="POST">   <!--?_method overrides post method-->
  <%- include('_form_fields') %>
  <div class="form-row form-row-end btn-row">
    <a class="btn btn-danger" href="/authors/<%= author.id %>">Cancel</a>  <!--bring us back to the authort page-->
    <button class="btn btn-primary" type="submit">Update</button>
  </div>
</form>
